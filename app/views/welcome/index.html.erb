<h3>Plataforma de Pagos</h3>
 <a id="pagar-btn" class="waves-effect red accent-4 btn-large" ><span class="black-text text-darken-2">Pagar Ahora</span></a>	
   <a id="Registrarse-btn" class="waves-effect indigo darken-4 btn-large" href="/users/sign_up">Registrarse</a>	
   <a id="ingresar-btn" class="waves-effect lime accent-3 btn-large" href="/users/sign_in"><span class="black-text text-darken-2">Ingresar</span></a>
<h5>Powered by <%= image_tag "mplogo.png", :size =>"110x25" %></h5> 


<script>
	$( "#Registrarse-btn" ).hide();
	$( "#ingresar-btn" ).hide();
</script>
<script>
$("#pagar-btn").click(function() {
	<% if user_signed_in? %>


 
     <%else%> 	
     	 $('#pagar-btn').addClass('animated bounceOut')

     	 setTimeout(function(){

         $( "#Registrarse-btn" ).show(300,function() {

         	setTimeout(function(){
                $( "#ingresar-btn" ).show(300);
                $('#pagar-btn').hide()
            },200); 
         })
     },200); 


    <%end%>
});
</script>